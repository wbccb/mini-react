{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": false, // 不输出文件
    "declaration": true, // 输出.d.ts文件

    /* Bundler mode */
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src/**/*", "**/*.d.ts", "**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "es", "lib", "__tests__", "vite.config.ts"] // 剔除vite.config.ts
}
